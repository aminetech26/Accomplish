<GridPane alignment="CENTER" maxHeight="625.0" maxWidth="1200.0" minHeight="625.0" minWidth="1200.0" prefHeight="625.0" prefWidth="1200.0" style="-fx-background-color: #FFFFFF;" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.accomplish.AddNewTaskController">

      <HBox alignment="CENTER" GridPane.rowIndex="0">
         <ImageView fx:id="fermer_popup" fitHeight="50.0" fitWidth="50.0" onMouseClicked="#BackToTasksPage" pickOnBounds="true" preserveRatio="true">
            <Image url="@images/retour.png" />
            <HBox.margin>
               <Insets left="-200.0" right="250.0" />
            </HBox.margin>
         </ImageView>

         <VBox alignment="CENTER" spacing="5.0">

         <Text fill="#86d6f8" layoutX="349.0" layoutY="66.0" strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-font-weight: bold;" text="Add a new task">
            <font>
               <Font size="30.0" />
            </font>
         </Text>

         <Line endX="27.333343505859375" endY="-7.62939453125E-6" startX="-259.0" stroke="#86d6f8" strokeWidth="3.0" />
         <HBox.margin>
            <Insets />
         </HBox.margin>
         <padding>
            <Insets top="-25.0" />
         </padding>

         </VBox>


         <padding>
            <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
         </padding>
         <GridPane.margin>
            <Insets bottom="25.0" left="50.0" top="5.0" />
         </GridPane.margin>
      </HBox>


      <VBox GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="CENTER">

         <StackPane>

         <Rectangle arcHeight="5.0" arcWidth="5.0" fill="WHITE" height="450.0" stroke="WHITE" strokeType="INSIDE" width="400.0">
      <effect>
         <DropShadow />
      </effect>
   </Rectangle>

            <VBox alignment="CENTER" spacing="15.0">

               <HBox alignment="CENTER" spacing="15.0">
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-font-weight: bold;" text="Task name :">
                     <font>
                        <Font size="15.0" />
                     </font>
                  </Text>
                  <TextField fx:id="taskName" prefHeight="38.0" prefWidth="182.0">
                  <HBox.margin>
                     <Insets />
                  </HBox.margin></TextField>
               </HBox>

               <HBox alignment="CENTER" spacing="25.0">

                  <Text strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-font-weight: bold;" text="Task category :">
                     <font>
                        <Font size="15.0" />
                     </font>
                  </Text>
                  <ComboBox fx:id="taskCategory" prefWidth="150.0" style="-fx-background-color: #EFFAFF;" />
               </HBox>

               <HBox alignment="CENTER" spacing="25.0">

                  <Text strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-font-weight: bold;" text="Task priority :">
                     <font>
                        <Font size="15.0" />
                     </font>
                  </Text>

                  <ComboBox fx:id="taskPriority" prefWidth="150.0" style="-fx-background-color: #EFFAFF;" />
               </HBox>

               <HBox alignment="TOP_CENTER" spacing="25.0">

                  <Text strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-font-weight: bold;" text="Task deadline :">
                     <font>
                        <Font size="15.0" />
                     </font>
                  <HBox.margin>
                     <Insets top="10.0" />
                  </HBox.margin>
                  </Text>

                  <VBox fx:id="vbox" spacing="10.0">

                     <HBox prefWidth="150.0" spacing="30.0">
                     <RadioButton fx:id="yesRadioButton" mnemonicParsing="false" text="Yes" />
                     <RadioButton fx:id="noRadioButton" mnemonicParsing="false" text="No">
                        <GridPane.margin>
                           <Insets left="75.0" />
                        </GridPane.margin>
                     </RadioButton>
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                     </HBox>

                  <DatePicker fx:id="taskDeadline" editable="false" prefHeight="25.0" prefWidth="150.0" style="-fx-background-color: #EFFAFF;" />
                  </VBox>

               </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label text="Task duration :" />
                  <Spinner fx:id="dureeHour" initialValue="0" max="23" min="0" />
                  <Spinner fx:id="dureeMinute" initialValue="0" max="59" min="0" />
               </children>
            </HBox>

               <HBox alignment="CENTER" spacing="25.0">
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-font-weight: bold;" text="Task type :">
                     <font>
                        <Font size="15.0" />
                     </font>
                  </Text>

                  <ComboBox fx:id="taskType" prefWidth="150.0" style="-fx-background-color: #EFFAFF;" />
               </HBox>
               <HBox alignment="CENTER" spacing="25.0">

                  <Text strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-font-weight: bold;" text="Locked :">
                     <font>
                        <Font size="15.0" />
                     </font>
                  </Text>

                  <ComboBox fx:id="locked" prefWidth="150.0" style="-fx-background-color: #EFFAFF;" />
               </HBox>



   <Button fx:id="addTaskButton" alignment="CENTER" mnemonicParsing="false" onAction="#handleAddTaskButton" prefHeight="40.0" prefWidth="105.0" style="-fx-background-color: #86D6F8;" text="Add task" textFill="WHITE">
      <font>
         <Font size="15.0" />
      </font>
               <VBox.margin>
                  <Insets bottom="-5.0" top="5.0" />
               </VBox.margin>
   </Button>
               
            </VBox>

         </StackPane>

      <padding>
         <Insets bottom="25.0" left="50.0" />
      </padding>
      </VBox>

      <columnConstraints>
         <ColumnConstraints />
      </columnConstraints>
      <rowConstraints>
         <RowConstraints />
         <RowConstraints />
      </rowConstraints>

   </GridPane>
