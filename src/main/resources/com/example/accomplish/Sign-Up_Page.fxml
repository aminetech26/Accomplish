<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>

<AnchorPane maxHeight="625.0" maxWidth="1200.0" minHeight="625.0" minWidth="1200.0" prefHeight="625.0" prefWidth="1200.0" style="-fx-background-color: #FFFFFF;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.accomplish.SignUpController">
   <padding>
      <Insets bottom="60.0" left="160.0" right="160.0" top="60.0" />
   </padding>

   <GridPane alignment="CENTER" prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #ffffff;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
      <padding>
         <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
      </padding>

      <columnConstraints>
         <ColumnConstraints />
         <ColumnConstraints />
         <ColumnConstraints />
      </columnConstraints>

      <ImageView accessibleText="Image" fitHeight="400.0" fitWidth="450.0" layoutX="103.0" layoutY="14.0" pickOnBounds="true" preserveRatio="true" GridPane.columnIndex="0" GridPane.rowIndex="0">
         <Image url="@images/loginpicture.png" />
      </ImageView>

      <Rectangle height="275.0" style="-fx-fill: #00000;" width="0.75" GridPane.columnIndex="1" GridPane.rowIndex="0">
         <GridPane.margin>
            <Insets left="50.0" right="50.0" />
         </GridPane.margin></Rectangle>

      <VBox alignment="CENTER_LEFT" GridPane.columnIndex="2" GridPane.rowIndex="0">
         <GridPane.margin>
            <Insets top="10.0" />
         </GridPane.margin>
         <Label alignment="CENTER" layoutX="10.0" layoutY="10.0" styleClass="text-style" stylesheets="@style.css" text="Create an account" textAlignment="CENTER">
            <font>
               <Font name="Arial Bold" size="30.0" />
            </font>
            <VBox.margin>
               <Insets />
            </VBox.margin>
            <textFill>
               <LinearGradient endX="1.0" endY="1.0">
                  <stops>
                     <Stop>
                        <color>
                           <Color red="0.0892999991774559" green="0.41034892201423645" blue="0.4699999988079071" />
                        </color>
                     </Stop>
                     <Stop offset="1.0">
                        <color>
                           <Color opacity="0.7723076939582825" />
                        </color>
                     </Stop>
                  </stops>
               </LinearGradient>
            </textFill>
         </Label>

         <Label layoutX="10.0" layoutY="10.0" text="Enter a Username" textFill="#888888">
            <font>
               <Font name="AdobeDevanagari-Regular" size="15.0" />
            </font>
            <VBox.margin>
               <Insets top="10.0" />
            </VBox.margin></Label>

         <TextField id="username" fx:id="username" prefHeight="42.0" prefWidth="150.0">
            <VBox.margin>
               <Insets bottom="10.0" top="3.0" />
            </VBox.margin>
            <padding>
               <Insets left="10.0" right="7.0" />
            </padding></TextField>


         <Label layoutX="10.0" layoutY="10.0" text="Enter your password" textFill="#888888">
            <font>
               <Font name="AdobeDevanagari-Regular" size="15.0" />
            </font>
            <VBox.margin>
               <Insets top="10.0" />
            </VBox.margin></Label>
         <PasswordField id="password1" fx:id="password1" prefHeight="42.0" prefWidth="150.0">
            <VBox.margin>
               <Insets top="3.0" />
            </VBox.margin>
            <padding>
               <Insets left="10.0" right="7.0" />
            </padding></PasswordField>

         <Label layoutX="10.0" layoutY="10.0" text="Confirm your password" textFill="#888888">
            <font>
               <Font name="AdobeDevanagari-Regular" size="15.0" />
            </font>
            <VBox.margin>
               <Insets top="10.0" />
            </VBox.margin></Label>
         <PasswordField id="password2" fx:id="password2" prefHeight="42.0" prefWidth="150.0">
            <VBox.margin>
               <Insets top="3.0" />
            </VBox.margin>
            <padding>
               <Insets left="10.0" right="7.0" />
            </padding></PasswordField>

         <Button id="signUpButton" fx:id="signUpButton" mnemonicParsing="false" onMouseClicked="#handleSignUp" prefHeight="35.0" prefWidth="300.0" styleClass="button2-style" stylesheets="@style.css" text="Sign Up" textAlignment="CENTER">
            <VBox.margin>
               <Insets top="15.0" />
            </VBox.margin>
            <font>
               <Font name="System Bold" size="17.0" />
            </font></Button>

         <HBox alignment="CENTER">
            <Label layoutX="10.0" layoutY="10.0" text="Already have an account ?" textFill="#888888">
               <font>
                  <Font name="Calisto MT Bold" size="15.0" />
               </font>
               <VBox.margin>
                  <Insets left="50.0" top="10.0" />
               </VBox.margin></Label>

            <Label fx:id="Sing_In" layoutX="10.0" layoutY="10.0" onMouseClicked="#handleLabel2Click" text="Sign In">
               <font>
                  <Font name="Calisto MT Bold" size="16.0" />
               </font>
               <HBox.margin>
                  <Insets left="5.0" />
               </HBox.margin>
            </Label>

            <VBox.margin>
               <Insets top="25.0" />
            </VBox.margin>
         </HBox>
      </VBox>
      <rowConstraints>
         <RowConstraints />
      </rowConstraints>



   </GridPane>

</AnchorPane>
