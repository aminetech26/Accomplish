<GridPane prefHeight="625.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.accomplish.FeedPageController">

    <VBox alignment="CENTER" prefHeight="625.0" prefWidth="80.0" spacing="25" style="-fx-background-color: #EFFAFF;" GridPane.columnIndex="0" GridPane.rowIndex="0">
        <effect>
            <DropShadow color="GRAY" offsetX="1.0" offsetY="0.0" radius="12.0" />
        </effect>

        <ImageView accessibleText="Image" fitHeight="30.0" fitWidth="30.0" onMouseClicked="#GotoHome">
            <Image url="@images/home.png" />
            <VBox.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="-25.0" />
            </VBox.margin>
        </ImageView>

        <ImageView accessibleText="Image" fitHeight="30.0" fitWidth="30.0" onMouseClicked="#GoToTasksPage">
            <Image url="@images/tasks.png" />
            <VBox.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" />
            </VBox.margin>
        </ImageView>

        <ImageView accessibleText="Image" fitHeight="30.0" fitWidth="30.0">
            <Image url="@images/statistics.png" />
            <VBox.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" />
            </VBox.margin>
        </ImageView>

        <ImageView accessibleText="Image" fitHeight="30.0" fitWidth="30.0">
            <Image url="@images/historique.png" />
            <VBox.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" />
            </VBox.margin>
        </ImageView>

        <ImageView accessibleText="Image" fitHeight="30.0" fitWidth="30.0">
            <Image url="@images/add.png" />
            <VBox.margin>
                <Insets left="10.0" right="10.0" top="20.0" />
            </VBox.margin>
        </ImageView>

        <ImageView accessibleText="Image" fitHeight="30.0" fitWidth="30.0">
            <Image url="@images/settings.png" />
         <VBox.margin>
            <Insets left="10.0" right="10.0" />
         </VBox.margin>
        </ImageView>

    </VBox>

    <GridPane GridPane.columnIndex="1">

        <HBox alignment="CENTER" GridPane.rowIndex="0">
        <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
            <Image url="@images/retour.png" />
            <HBox.margin>
               <Insets right="100.0" />
            </HBox.margin>
        </ImageView>

        <Rectangle arcHeight="40.0" arcWidth="40.0" fill="WHITE" height="75.0" stroke="BLACK" strokeType="INSIDE" strokeWidth="0.0" width="200.0">
                <effect>
                    <DropShadow>
                        <color>
                            <Color opacity="0.5" />
                        </color>
                    </DropShadow>
                </effect>
            </Rectangle>


            <padding>
            <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
         </padding>
         <GridPane.margin>
            <Insets bottom="20.0" top="10.0" />
         </GridPane.margin>
        </HBox>

        <ScrollPane fx:id="scrollpane" prefHeight="375.0" prefWidth="1200.0" style="-fx-border-color: #00000000;" stylesheets="@style.css" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="CENTER">

                <VBox spacing="10" fx:id="task" >
                    <!-- Row 1 -->
                    <HBox spacing="10" styleClass="scroll-pane" stylesheets="@style.css">
               <CheckBox alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false">
                  <HBox.margin>
                     <Insets left="25.0" top="35.0" />
                  </HBox.margin>
               </CheckBox>
                        <Rectangle arcHeight="40.0" arcWidth="40.0" fill="WHITE" height="75.0" stroke="BLACK" strokeType="INSIDE" strokeWidth="0.0" width="500.0">
                            <effect>
                                <DropShadow>
                                    <color>
                                        <Color opacity="0.5" />
                                    </color>
                                </DropShadow>
                            </effect>
                  <HBox.margin>
                     <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                  </HBox.margin>
                        </Rectangle>
                    </HBox>

                    <!-- Row 1 -->
                    <HBox spacing="10" />

                    <!-- Row 2 -->
                    <HBox spacing="10" />

                    <!-- Row 3 -->
                    <HBox spacing="10" />

                    <!-- Row 4 -->
                    <HBox spacing="10" />
                    <!-- Add more rows as needed -->
                </VBox>
         <GridPane.margin>
            <Insets left="20.0" />
         </GridPane.margin>
         <styleClass>
            <String fx:value="scroll-pane" />
            <String fx:value="scroll-bar" />
         </styleClass>


        </ScrollPane>

        <HBox spacing="20.0" GridPane.rowIndex="2">

            <ImageView accessibleText="Image" fitHeight="35.0" fitWidth="35.0" onMouseClicked="#AddTask">
                <Image url="@images/add_task.png" />
                <VBox.margin>
                    <Insets bottom="10.0" />
                </VBox.margin>
            <HBox.margin>
               <Insets bottom="25.0" left="25.0" top="25.0" />
            </HBox.margin>
            </ImageView>

            <Label layoutX="205.0" layoutY="78.0" prefHeight="82.0" prefWidth="108.0" style="-fx-font-weight: bold;" text="Add a new task">
                <font>
                    <Font size="15.0" />
                </font>
            </Label>

            <Label layoutX="205.0" layoutY="78.0" prefHeight="82.0" prefWidth="146.0" style="-fx-font-weight: bold;" text="Manual planification">
                <font>
                    <Font size="15.0" />
                </font>
            <HBox.margin>
               <Insets left="25.0" />
            </HBox.margin>
            </Label>
            <Label layoutX="205.0" layoutY="78.0" prefHeight="83.0" prefWidth="167.0" style="-fx-font-weight: bold;" text="Automatic planification">
                <font>
                    <Font size="15.0" />
                </font>
            <HBox.margin>
               <Insets left="10.0" />
            </HBox.margin>
            </Label>

         <GridPane.margin>
            <Insets left="20.0" right="20.0" top="20.0" />
         </GridPane.margin>

        </HBox>

        <columnConstraints>
         <ColumnConstraints />
      </columnConstraints>
      <rowConstraints>
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
      </rowConstraints>

    </GridPane>

    <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="1000.0" spacing="25.0" GridPane.columnIndex="2">
      <padding>
         <Insets bottom="10.0" left="20.0" right="10.0" top="20.0" />
      </padding>

        <HBox alignment="CENTER" prefHeight="48.0" prefWidth="445.0">
            <Label alignment="CENTER" prefHeight="37.0" prefWidth="101.0" text="Welcome">
                <font>
                    <Font name="System Bold" size="20.0" />
                </font></Label>

            <Label alignment="CENTER" prefHeight="35.0" prefWidth="101.0" text="username">
                <font>
                    <Font size="17.0" />
                </font></Label>

        </HBox>

        <DatePicker fx:id="datePicker" editable="false" layoutX="937.0" layoutY="180.0" prefHeight="32.0" prefWidth="237.0" showWeekNumbers="true" styleClass="datePicker" stylesheets="@style.css">
         <VBox.margin>
            <Insets top="50.0" />
         </VBox.margin></DatePicker>

    </VBox>

   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
   </rowConstraints>


</GridPane>
